<!DOCTYPE generatorConfiguration
        PUBLIC "-//mybatis.org//DTD MyBatis Generator Configuration 1.0//EN"
        "http://mybatis.org/dtd/mybatis-generator-config_1_0.dtd">

<generatorConfiguration>
	<properties resource="./generator/jdbc.properties" />
    <context id="Mysql" targetRuntime="MyBatis3Simple" defaultModelType="flat">
    <property name="javaFileEncoding" value="UTF-8"/>
    
    <plugin type="com.lhy.mybatis.plugin.HyMapperPlugin">
     <property name="mappers" value="tk.mybatis.mapper.common.Mapper"/>
      <!--<property name="beginningDelimiter" value="`"/>-->
      <!--<property name="endingDelimiter" value="`"/>-->
       <!-- caseSensitive默认false，当数据库表名区分大小写时，可以将该属性设置为true -->
<!--       <property name="caseSensitive" value="true"/> -->
<!-- 		<property name="implementSerializableInteface" value="true" />  -->
		 <!-- 实体类增加字段名称枚举 默认true -->
<!-- 		<property name="modelFieldEnum" value="true" /> -->
			<property name="swaggerApiEnabled" value="true"></property><!--增加swagger-api注解 -->
    </plugin>

     <jdbcConnection driverClass="${jdbc.driverClassName}"
			connectionURL="${jdbc.url}" userId="${jdbc.username}" password="${jdbc.password}">
			<property name="remarksReporting" value="true"></property><!-- 增加oracle注释 -->
    </jdbcConnection>
    <javaModelGenerator targetPackage="com.lhy.si.sec.user.model" targetProject="./src/main/java"/>

    <sqlMapGenerator targetPackage="com.lhy.si.sec.user.mapper" targetProject="./src/main/resources"/>

    <javaClientGenerator targetPackage="com.lhy.si.sec.user.mapper" targetProject="./src/main/java" type="XMLMAPPER"/>
	
	<!-- 特别注意 生成的实体类  domainObjectName 次字母不能大写否则导致生成的mapper bean名称首字母大写 不利于注入
	   不配置domainObjectName 默认生成的表全名对应的实体名称  例如： TZzfwXszcZp 次字母是大写的 也会存在问题-->
<!--  	<table tableName="T_ZZFW_ZZDY_FWXMSZ" domainObjectName="ZzfwZzdyFwxmsz"> 
     	    	<generatedKey  column="fwxmid" sqlStatement="select lower(sys_guid()) from dual" identity="false"/> 
     </table>  -->
<!-- 	<table tableName="T_ZZFW_FWXM_YWY" domainObjectName="ZzfwFwxmYwy"> 
     	    	<generatedKey  column="ywyid" sqlStatement="select lower(sys_guid()) from dual" identity="false"/> 
     </table>  -->
 	
 	<!-- 如果多个用户下有相同表名，需要增加schema为当前用户 -->
 	<table schema="${jdbc.username}" tableName="t_sec_user" domainObjectName="SecUser"> 
 		<generatedKey  column="id"  identity="true" sqlStatement="Mysql"/>
     </table> 
    
  </context>
</generatorConfiguration>